{
  "extends": "../../../node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "esm",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "esm/src/*.ts",
    "esm/src/**/*.ts",
  ],
  "exclude": [
    "../../../node_modules",
    "node_modules"
  ]
}
