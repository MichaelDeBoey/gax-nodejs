{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "esm",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "esm/src/*.ts",
    "tools/src/listProtos.ts",
    "tools/src/minify.ts",
    "tools/src/prepublish.ts",
    "esm/src/*/*.ts",
    "esm/test/system-test/*.ts",
    "esm/test/unit/*.ts",
    // "esm/test/browser-test/**/*.ts",
    // "esm/test/showcase-echo-client/**/*.ts",
    // "esm/test/showcase-server/**/*.ts"
  ]
}
