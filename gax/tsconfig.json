{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "esm",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "node16",
    "moduleResolution": "node16",
    "target": "esnext",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "lib": ["es2020", "dom"]
  },
  "include": [
    "esm/src/*.ts",
    "tools/src/listProtos.ts",
    "tools/src/minify.ts",
    "tools/src/prepublish.ts",
    "esm/src/*/*.ts",
    "esm/test/system-test",
    "esm/test/unit/*.ts"
  ]
}
